{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2018", "dom"],
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@services/*": ["./src/services/*"],
            "@/*": ["./src/*"],
            "@controllers/*": ["./src/controllers/*"],
            "@shared/*": ["./src/shared/*"],
            "@globalShared/*": ["../shared/*"],
            "@globalInterfaces/*": ["../shared/interfaces/*"]
        },
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}
